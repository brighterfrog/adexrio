{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./src",
      "baseUrl": "./",
      "rootDir": "./lib",
      "paths": {
        "src": ["./lib"]
      }      
    },
    "exclude": [
      "jest.config.js",
      "webpack.config.js",      
      "src"     
    ]
  }