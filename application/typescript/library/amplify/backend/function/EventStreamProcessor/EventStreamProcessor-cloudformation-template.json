        "DEBUGON": "true"
      },
      "prod": {
        "VECHAINAPINODE": "https://vethor-node.vechain.com",
        "RECORDTYPE": "public",
        "RANDOMORGAPIENDPOINT": "https://api.random.org/json-rpc/2/invoke",
        "DEBUGON": "false"
      }
    }
  },
  "Parameters": {
    "CloudWatchRule": {
      "Type": "String",
      "Default": "NONE",
      "Description": " Schedule Expression"
    },
    "deploymentBucketName": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    },
    "apiadexrGraphQLAPIIdOutput": {
      "Type": "String",
      "Default": "apiadexrGraphQLAPIIdOutput"
    },
    "apiadexrGraphQLAPIEndpointOutput": {
      "Type": "String",
      "Default": "apiadexrGraphQLAPIEndpointOutput"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    },
    "IsProductionEnv": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "prod"
      ]
    },
    "IsTestEnv": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "test"
      ]
    },
    "IsDevEnv": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "dev"
      ]
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Metadata": {
        "aws:asset:path": "./src",
        "aws:asset:property": "Code"
      },
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucketName"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        },
        "Handler": "index.handler",
        "FunctionName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "EventStreamProcessor",
            {
              "Fn::Join": [
                "",
                [
                  "EventStreamProcessor",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "Environment": {
          "Variables": {
            "ENV": {
              "Ref": "env"
            },
            "REGION": {
              "Ref": "AWS::Region"
            },
            "VECHAIN_API_NODE": {
              "Fn::FindInMap": [
                "Environments",
                {
                  "Ref": "env"
                },
                "VECHAINAPINODE"
              ]
            },
            "RECORD_TYPE": {
              "Fn::FindInMap": [
                "Environments",
                {
                  "Ref": "env"
                },
                "RECORDTYPE"
              ]
            },
            "RANDOM_ORG_API_ENDPOINT": {
              "Fn::FindInMap": [
                "Environments",
                {
                  "Ref": "env"
                },
                "RANDOMORGAPIENDPOINT"
              ]
            },
            "DEBUG_ON": {
              "Fn::FindInMap": [
                "Environments",
                {
                  "Ref": "env"
                },
                "DEBUGON"
              ]
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs14.x",
        "Layers": [],
        "Timeout": 25
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "adexrLambdaRolef4c9a640",
            {
              "Fn::Join": [
                "",
                [
                  "adexrLambdaRolef4c9a640",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "lambdaexecutionpolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    },
                    "lambda": {
                      "Ref": "LambdaFunction"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "LambdaTriggerPolicyCreatePoolEventLogV2": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "amplify-lambda-execution-policy-CreatePoolEventLogV2",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:DescribeStream",
                "dynamodb:GetRecords",
                "dynamodb:GetShardIterator",
                "dynamodb:ListStreams"
              ],
              "Resource": {
                "Fn::ImportValue": {
                  "Fn::Sub": "${apiadexrGraphQLAPIIdOutput}:GetAtt:CreatePoolEventLogV2Table:StreamArn"
                }
              }
            }
          ]
        }
      }
    },
    "LambdaEventSourceMappingCreatePoolEventLogV2": {
      "Type": "AWS::Lambda::EventSourceMapping",
      "DependsOn": [
        "LambdaTriggerPolicyCreatePoolEventLogV2",
        "LambdaExecutionRole"
      ],
      "Properties": {
        "BatchSize": 100,
        "Enabled": true,
        "EventSourceArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${apiadexrGraphQLAPIIdOutput}:GetAtt:CreatePoolEventLogV2Table:StreamArn"
          }
        },
        "FunctionName": {
          "Fn::GetAtt": [
            "LambdaFunction",
            "Arn"
          ]
        },
        "StartingPosition": "LATEST"
      }
    },
