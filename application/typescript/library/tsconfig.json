{
    "compilerOptions": {
        "types": ["node"],
        // "typeRoots": [ "node_modules/@types" ],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,        
        "target": "es2017",        
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        //"inlineSourceMap": true,
        "outDir": "../build/library/src",
        "rootDir": "./src",       
        "resolveJsonModule": true,        
        "composite": true,
        "removeComments": true,
        "declaration": true,
        "skipLibCheck": true,
    },
      "include": [
           "./src/**/*",
           "./src/**/*.json",         
           "aws-exports.js"
       ]   
    }