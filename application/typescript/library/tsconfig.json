{
    "compilerOptions": {
        "types": ["node"],
        // "typeRoots": [ "node_modules/@types" ],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        // "target": "es2017",
        "target": "es2017",        
        "noImplicitAny": false,
        "moduleResolution": "node",
        // "sourceMap": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "composite": true,
        // "tsBuildInfoFile": "./dist/library/tsconfig.buildinfo"     
    },
      "include": [
           "src/**/*",
           "src/**/*.json",
           "env.*"
       ]   
    }